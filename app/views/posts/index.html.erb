<p id="notice"><%= notice %></p>

<h1>My Video</h1>
<%= link_to 'New Post', new_post_path %>

<table>
  <thead>
    <tr>
      <th>ID </th>
      <th>Title</th>
      <th>Video</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= video_tag post.image_url.to_s, controls: true %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


